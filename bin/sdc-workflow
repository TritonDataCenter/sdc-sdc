#
# Convenience wrapper for calling the Workflow API.
#

if [ "$TRACE" != "" ]; then
    export PS4='[\D{%FT%TZ}] ${BASH_SOURCE}:${LINENO}: ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'
    set -o xtrace
fi
set -o errexit
set -o pipefail


TOP=$(cd $(dirname $0)/../ 2>/dev/null; pwd)
LIBDC=$TOP/lib/libdc.sh
if [[ ! -f $LIBDC ]]; then
    echo "$(basename $0): fatal: unable to find $LIBDC"
    exit 1
fi
source $LIBDC

path=$1
if [[ -z ${path} ]]; then
    cat <<EOF
error: no PATH argument given

Usage:
        $0 [--no-headers] PATH [EXTRA-CURL-ARGS]

EOF
    exit 1
fi

workflow "$@" | (json -q || true)
exit $?
