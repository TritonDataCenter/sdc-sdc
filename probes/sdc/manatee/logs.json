                "level": "FATAL"
            },
            "threshold": 1,
            "period": 60
        }
    },
    {
        "name": "manatee-backupserver-logscan",
        "type": "bunyan-log-scan",
        "config": {
            "smfServiceName": "manatee-backupserver",
            "fields": {
                "level": "FATAL"
            },
            "threshold": 1,
            "period": 60
        }
    },
    {
        "name": "registrar-logscan",
        "type": "bunyan-log-scan",
        "config": {
            "smfServiceName": "registrar",
            "fields": {
                "level": "FATAL"
            },
            "threshold": 1,
